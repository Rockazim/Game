# Server Configuration for HyperFPS.xyz
PORT=3000
NODE_ENV=production

# Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://hyperfps.xyz,https://www.hyperfps.xyz,http://localhost:5173

# Security Settings
MAX_ROOMS=100
MAX_PLAYERS_PER_ROOM=20
TICK_RATE=64

# For production with HTTPS (optional)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# For authentication server (optional - not needed for simple-server.js)
# JWT_SECRET=your-secret-key-here
# JWT_EXPIRES_IN=7d
# REFRESH_TOKEN_EXPIRES_IN=30d

# Redis for scaling (optional)
# REDIS_URL=redis://localhost:6379
